# Database Configuration
DATABASE_URL="postgresql://postgres:CHANGE_THIS_PASSWORD@postgres:5432/restaurant_crm"
POSTGRES_PASSWORD="CHANGE_THIS_PASSWORD"

# Application Configuration
NODE_ENV="production"
NEXT_PUBLIC_APP_URL="https://your-domain.com"
NEXTAUTH_URL="https://your-domain.com"

# Security Secrets (CHANGE THESE IN PRODUCTION)
JWT_SECRET="CHANGE_THIS_JWT_SECRET_MINIMUM_32_CHARACTERS"
REFRESH_TOKEN_SECRET="CHANGE_THIS_REFRESH_TOKEN_SECRET_MINIMUM_32_CHARACTERS"
NEXTAUTH_SECRET="CHANGE_THIS_NEXAUTH_SECRET_MINIMUM_32_CHARACTERS"

# Redis Configuration
REDIS_URL="redis://:CHANGE_THIS_REDIS_PASSWORD@redis:6379"
REDIS_PASSWORD="CHANGE_THIS_REDIS_PASSWORD"

# Email Configuration (Optional)
EMAIL_HOST="smtp.gmail.com"
EMAIL_PORT=587
EMAIL_USER="your-email@gmail.com"
EMAIL_PASSWORD="your-app-password"
EMAIL_FROM="noreply@your-domain.com"

# SMS Configuration (Optional - Twilio)
SMS_PROVIDER="twilio"
TWILIO_ACCOUNT_SID="your-twilio-account-sid"
TWILIO_AUTH_TOKEN="your-twilio-auth-token"
TWILIO_PHONE_NUMBER="+1234567890"

# File Upload Configuration
UPLOAD_DIR="./public/uploads"
MAX_FILE_SIZE="5242880" # 5MB in bytes

# Timezone Configuration
DEFAULT_TIMEZONE="Europe/Madrid"

# App Configuration
APP_NAME="CRM Restaurante"
APP_VERSION="1.0.0"

# Analytics (Optional)
GOOGLE_ANALYTICS_ID="GA-XXXXXXXXX"

# Monitoring (Optional)
SENTRY_DSN="your-sentry-dsn-here"

# CORS Configuration
CORS_ORIGIN="https://your-domain.com"

# Backup Configuration
BACKUP_SCHEDULE="0 2 * * *" # Daily at 2 AM
BACKUP_RETENTION_DAYS="30"