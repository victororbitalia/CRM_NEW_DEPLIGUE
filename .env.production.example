# Configuración del Servidor para Producción
NODE_ENV=production
PORT=3000

# URL de la aplicación (cambiar por tu dominio real)
NEXT_PUBLIC_APP_URL=https://tu-dominio.easypanel.host
NEXT_PUBLIC_API_URL=https://tu-dominio.easypanel.host/api

# Base de Datos (OBLIGATORIO - PostgreSQL requerido)
# Reemplaza TU_PASSWORD con la contraseña que generes en Easypanel
DATABASE_URL=postgresql://postgres:TU_PASSWORD@postgres:5432/restaurant_crm

# Autenticación JWT (genera claves seguras únicas)
JWT_SECRET=TU_JWT_SECRET_SUPER_SEGURO_AQUI_MINIMO_32_CARACTERES
REFRESH_TOKEN_SECRET=TU_REFRESH_TOKEN_SECRET_SUPER_SEGURO_AQUI_MINIMO_32_CARACTERES
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_EXPIRES_IN=30d

# NextAuth (si usas NextAuth.js)
NEXTAUTH_URL=https://tu-dominio.easypanel.host
NEXTAUTH_SECRET=TU_NEXAUTH_SECRET_SUPER_SEGURO_MINIMO_32_CARACTERES

# Email (opcional pero recomendado para notificaciones)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=tu-email@gmail.com
EMAIL_PASSWORD=tu-app-password-de-google
EMAIL_FROM=noreply@tu-dominio.com

# Redis (para caché y sesiones - opcional)
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=tu_redis_password_segura

# Configuración de la aplicación
APP_NAME=CRM Restaurante
APP_VERSION=1.0.0
DEFAULT_TIMEZONE=Europe/Madrid

# File Upload
UPLOAD_DIR=./public/uploads
MAX_FILE_SIZE=5242880

# Monitoreo (opcional)
SENTRY_DSN=TU_SENTRY_DSN_SI_USAS_SENTRY

# Analytics (opcional)
GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID_SI_USAS

# SMS (opcional - para notificaciones SMS)
TWILIO_ACCOUNT_SID=TU_TWILIO_ACCOUNT_SID
TWILIO_AUTH_TOKEN=TU_TWILIO_AUTH_TOKEN
TWILIO_PHONE_NUMBER=+1234567890

# Stripe (opcional - para pagos)
STRIPE_PUBLIC_KEY=pk_test_TU_STRIPE_PUBLIC_KEY
STRIPE_SECRET_KEY=sk_test_TU_STRIPE_SECRET_KEY
STRIPE_WEBHOOK_SECRET=whsec_TU_STRIPE_WEBHOOK_SECRET

# Configuración específica para Easypanel
# Estas variables las proporcionará Easypanel automáticamente
# POSTGRES_PASSWORD=provided_by_easypanel
# REDIS_PASSWORD=provided_by_easypanel